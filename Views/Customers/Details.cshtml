@model BE.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">THÔNG TIN THÀNH VIÊN</h2>
    <div>
        <h4>Thành viên</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label for="name" class="form-label">TÊN:</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CusName)
            </dd>

            <dt>
                <label for="email" class="form-label">EMAIL:</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CusEmail)
            </dd>

            <dt>
                <label for="pwd" class="form-label">PASSWORD:</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CusPassword)
            </dd>





        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.CusPhone }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
