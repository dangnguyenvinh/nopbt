@model BE.Models.Customer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">XÓA THÀNH VIÊN</h2>


    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Customer</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label for="name" class="form-label">TÊN:</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CusName)
            </dd>

            <dt>
                <label for="email" class="form-label">EMAIL:</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CusEmail)
            </dd>
            <dt>
                <label for="pwd" class="form-label">PASSWORD:</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CusPassword)
            </dd>





        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" class="btn btn-primary">XÁC NHẬN</button>

            </div>
        }
        <div>
            @Html.ActionLink("Trở về danh sách", "Index")
        </div>
    </div>
</div>
