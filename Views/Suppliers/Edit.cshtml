@model BE.Models.Supplier

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">DANH SÁCH </h2>

    <p>
        @Html.ActionLink("TẠO MỚI", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Tên Nhà cung cấp
            </th>
            <th>
                Địa chỉ
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.SupID }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.SupID }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.SupID })
                </td>
            </tr>
        }

    </table>
</div>
